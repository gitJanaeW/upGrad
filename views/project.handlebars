<div class="container">
    <div class="row">
        <div class="col-2">
        <div class="col-8">
            <div class="row">
                <div class="col-8">
                    <div class="card-deck" style="width: 50rem;" id="project-card">
                        <div class="card research-card">
                            <div class="card-body">
                                <a class="card-title display-4">{{project.project_name}}</a>
                                <h5 class="card-subtitle mb-2 text-dark">{{project.user.name}}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">{{project.user.institution}}</h6>
                                <h6><span>Contact </span><a href="mailto:{{project.user.email}}"
                                        class="card-link">{{project.user.name}}!</a> </h6>
                                <h4 class="card-text">{{project.abstract}}</h4>
                                <h6><span class="badge bg-secondary">{{project.subject}}</span><span
                                        class="badge bg-secondary">Ongoing
                                        Status: {{project.ongoing_status}}</span><span class="badge bg-secondary">Seeking
                                        Collaborators: {{project.collab_status}}</span></h6>
                                <h6><span>Check out my project here:</span><a href="#"
                                        class="card-link">{{project.project_url}}</a> </h6>
                            </div>
                        </div>
                        
                        <div class="mb-3 border rounded py-3 px-3 mx-2 bg-light">
                            <h4>Comments</h4>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
<script src="/js/createComment.js"></script